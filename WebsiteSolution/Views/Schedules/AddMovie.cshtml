@model Group5_FinalProject_v2.Models.Schedule

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add Movie</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Schedules" asp-action="AddMovie" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleID" />
            <div class="form-group">
                <label asp-for="ShowTime" class="control-label"></label>
                <input asp-for="ShowTime" class="form-control" />
                <span asp-validation-for="ShowTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theater" class="control-label">Theater Number</label>
                <select asp-for="Theater" asp-items="Html.GetEnumSelectList<Theater>()" class="form-control">
                </select>
                <span asp-validation-for="Theater" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SpecialEvent" /> @Html.DisplayNameFor(model => model.SpecialEvent)
                </label>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Add Movie" class="btn btn-primary" />*@
                <a href="@Url.Action("Index", "Schedules")" class="btn btn-primary">Add Movie</a>
                

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

