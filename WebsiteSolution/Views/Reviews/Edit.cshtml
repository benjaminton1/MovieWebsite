@model Group5_FinalProject_v2.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TextReview" class="control-label"></label>
                @Html.EditorFor(model => model.TextReview, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TextReview, "", new { @class = "text-danger" })
            </div>
            @if (User.IsInRole("Customer"))
            {
                <div class="form-group">
                    <label asp-for="NumRating" class="control-label"></label>
                    @Html.EditorFor(model => model.NumRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumRating, "", new { @class = "text-danger" })
                </div>
            }
            @if (User.IsInRole("Manager") || User.IsInRole("Employee"))
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ReviewStatus" /> @Html.DisplayNameFor(model => model.ReviewStatus)
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

